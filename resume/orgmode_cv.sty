%% Redefine Title
\renewcommand*{\maketitle}{%
  {
     \centering{\LARGE\color{my_blue}\textbf\@title}\\[.1in]
  }
}

%% Redefine Section Headings, etc.
\titleformat{\section} %command
            {\large\scshape\raggedright\color{my_blue}\textbf} %format
            {} %prefix number label
            {0em} %sep
            {} %before
            [\titlerule] %after
\titlespacing{\section}{0pt}{15pt}{15pt}

\titleformat{\subsection} %command
            %% [leftmargin] %shape
            {\normalsize\raggedright} %format
            {} %prefix number label
            {0pt} %sep
            {} %before
            [] %after
\titlespacing{\subsection}
            {0.15\textwidth}% max width of the title(for wrap/leftmargin shape)
            {5pt}% vertical space before the title
            {15pt}% separation between title and text
